<% if @appointment.errors.any? %>
  $('.error-message').remove();
  $(".weui_cell").removeClass('weui_cell_warn');
  <% @appointment.errors.keys.each do |k|%>
    $("input[name='appointment[<%= k %>]']").parent().parent().addClass('weui_cell_warn');
  <% end %>
  $("<%= j render partial: 'error', locals: { message: @appointment.errors.full_messages.join(" ") } %>").appendTo(".page .bd");
  var tooltips = $('.js_tooltips');
  if (tooltips.css('display') == 'none') {
    tooltips.show();
    setTimeout(function () {
        tooltips.hide();
    }, 2000);
  }
<% end %>
